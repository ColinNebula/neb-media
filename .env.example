# Neb Media Environment Variables Example
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to git

# API Configuration
REACT_APP_API_URL=http://localhost:5001/api

# App Configuration
REACT_APP_NAME=Neb Media
REACT_APP_VERSION=0.1.0

# Sentry Monitoring (Error Tracking)
# Get your DSN from https://sentry.io
REACT_APP_SENTRY_DSN=
REACT_APP_SENTRY_DEBUG=false

# Feature Flags (optional)
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG=false

# Service Worker
REACT_APP_ENABLE_SERVICE_WORKER=true

# HTTPS Configuration (for local development)
# To enable HTTPS locally, generate certificates first
HTTPS=false
# SSL_CRT_FILE=localhost.pem
# SSL_KEY_FILE=localhost-key.pem

# External Services (if needed in future)
# REACT_APP_YOUTUBE_API_KEY=
# REACT_APP_VIMEO_API_KEY=
# REACT_APP_GOOGLE_ANALYTICS_ID=

